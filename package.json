{
  "name": "nami",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -n server,web -c cyan,magenta \"bun run dev:server\" \"bun run dev:web\"",
    "dev:server": "cd apps/server && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "dev:sudo": "sudo bun run dev:server",
    "build": "bun run build:server && bun run build:web",
    "build:server": "cd apps/server && bun run build",
    "build:web": "cd apps/web && bun run build"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}